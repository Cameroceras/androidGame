<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/back1"
        android:gravity="center"
        android:text="我的五子棋"
        android:textColor="#fff" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@mipmap/back">

        <com.ant.wu.zi.qi.views.WuziqiPannel
            android:id="@+id/ac_index_game_panel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"/>

    </FrameLayout>

    <RadioGroup
        android:id="@+id/ac_index_menu_group"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@mipmap/back1"
        android:orientation="horizontal">


        <RadioButton
            android:id="@+id/ac_index_menu_restart"
            style="@style/ant_index_radiobutton"
            android:drawableTop="@mipmap/menu_restart"
            android:text="重玩" />

        <RadioButton
            android:id="@+id/ac_index_menu_music"
            style="@style/ant_index_radiobutton"
            android:drawableTop="@mipmap/menu_music"
            android:text="音效" />

        <RadioButton
            android:id="@+id/ac_index_menu_bgmusic"
            style="@style/ant_index_radiobutton"
            android:drawableTop="@mipmap/menu_mute"
            android:text="音乐" />

        <RadioButton
            android:id="@+id/ac_index_menu_about"
            style="@style/ant_index_radiobutton"
            android:drawableTop="@mipmap/menu_about"
            android:text="关于" />

        <RadioButton
            android:id="@+id/ac_index_menu_back"
            style="@style/ant_index_radiobutton"
            android:drawableTop="@mipmap/menu_exit"
            android:text="主页" />

    </RadioGroup>

</LinearLayout>